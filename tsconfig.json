{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"],
      "knex": ["node_modules/knex"],
      "@types/knex": ["node_modules/@types/knex"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
